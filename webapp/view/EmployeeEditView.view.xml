<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form" controllerName="sapips.training.employeeapp.controller.EmployeeEditView">
    <Page id="editEmployeePage" title="{i18n>title}">
        <Panel id="nameAndCLEd">
            <VBox id="nameClVboxEd">
                <Title id="nameEmpEd" text="{/0>/FirstName} {/0>/LastName}"/>
                <Text id="clEmpEd" text="{i18n>cLViewEmployee}"/>
            </VBox>
        </Panel>
        <Panel id="empDetailsAllEd">
            <IconTabBar id="deetsAndSKillsNavEd" backgroundDesign="Transparent">
                <items>
                    <IconTabFilter id="detailsTabEd" text="{i18n>detailsTab}">
                        <Panel id="empDetailsPanelIdEd" headerText="{i18n>empDetailsTitle}">
                            <form:SimpleForm id="detailsListingEd">
                                <Label id="empIdDetEd" text="{i18n>employeeId}:"/>
                                <Input id="empIdDetInput" value="{EmployeeId}"/>
                                <Label id="empFnDetEd" text="{i18n>firstName}:"/>
                                <Input id="empFnDetInput" value="{FirstName}"/>
                                <Label id="empLnDetEd" text="{i18n>lastName}:"/>
                                <Input id="empLnDetInput" value="{LastName}"/>
                                <Label id="empAgeDetEd" text="{i18n>age}:"/>
                                <Input id="empAgeDetInput" value="{Age}"/>
                                <Label id="empHDateDetEd" text="{i18n>dateOfHire}:"/>
                                <Input id="empHDateDetInput" value="{DateHire}"/>
                                <Label id="empClDetEd" text="{i18n>careerLevel}:"/>
                                <Input id="empClDetInput" value="{CareerLevel}"/>
                                <Label id="empCpDetEd" text="{i18n>currentProject}:"/>
                                <Input id="empCurrentDetInput" value="{CurrentProject}"/>
                            </form:SimpleForm>
                        </Panel>
                    </IconTabFilter>
                    <IconTabFilter id="skillsTabEd" text="{i18n>skillsTab}">
                        <Title id="skillsTableTitleIdEd" text="{i18n>skillsTab}"></Title>
                        <HBox id="actionButtonsSkillsBox" alignItems="Center" justifyContent="End" renderType="Bare">
                            <Button id="addSkillButton" text="{i18n>btnAdd}" press="onSkillAdd" class="sapUiSmallMarginBegin" />
                            <Button id="deleteSkillButton" text="{i18n>btnDelete}" type="Reject" press="onSkillDelete" class="sapUiSmallMarginBegin" />
                        </HBox>
                        <Table id="skillsTableEmpViewEd" items="{path : '/'}">
                            <columns>
                                 <Column id="colSKillsIdEd"><Text id="txtHeaderSkillsIdEd" text="{i18n>skillsCol}"/></Column>
                                 <Column id="colProficiencyIdEd"><Text id="txtHeaderProficiencyIdEd" text="{i18n>proficiencyCol}"/></Column>
                            </columns>
                            <items>
                                <ColumnListItem id="employeeSkillRowEd">
                                    <cells>
                                        <Text id="skillDetEmpIdEd" text="skeel"/>
                                        <Text id="proficiencyDetEmpIdEd" text="2"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </Panel>
        <footer>
            <OverflowToolbar id="editEmpOft">
                <ToolbarSpacer id="editEmpOftbs"/>
                <Button id="updateButtonId" text="{i18n>edit}" type="Emphasized"/>
                <Button id="editEmpCancelButtonId" text="{i18n>cancel}" press="onCancel"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>